@page
@model Server.Pages.Admin.CultureManagement.DetailsModel
@inject Infrastructure.Settings.ApplicationSettings applicationSettings
@{
    var pageTitle =
        $" {Resources.DataDictionary.Details} {Resources.DataDictionary.Culture} ";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<section-form>
    <fieldset>
        <section-form-header>
            @(pageTitle)
        </section-form-header>

        <partial name="PartialViews/_DisplayPageMessages" />

        <readonly-input asp-for="ViewModel.Id" />

        @*<readonly-input asp-for="ViewModel.Name" />*@

        <readonly-checkbox asp-for="ViewModel.IsActive" />

        <readonly-checkbox asp-for="ViewModel.IsDefault" />

        @*<readonly-checkbox asp-for="ViewModel.IsDeletable" />*@

        <readonly-checkbox asp-for="ViewModel.InsertDateTime" />

        <readonly-checkbox asp-for="ViewModel.UpdateDateTime" />

        <readonly-checkbox asp-for="ViewModel.Description" />
    </fieldset>
</section-form>