@page
@model Server.Pages.Admin.CultureManagement.DetailsModel
@inject Infrastructure.Settings.ApplicationSettings applicationSettings
@{
    var pageTitle =
        $" {Resources.DataDictionary.Details} {Resources.DataDictionary.Culture} ";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<section-form>
    <fieldset>
        <section-form-header>
            @(pageTitle)
        </section-form-header>

        <partial name="PartialViews/_DisplayPageMessages" />

        <section-form-field>
            <span class="fi fi-@(Model.ViewModel!.Flag)"></span>
        </section-form-field>
       
        <dtat-readonly-input asp-for="ViewModel!.Id" />

        <dtat-readonly-input asp-for="ViewModel!.Name" />
        
        <dtat-readonly-checkbox asp-for="ViewModel!.IsActive" />

        <dtat-readonly-checkbox asp-for="ViewModel!.IsDefault" />
       
        <dtat-readonly-checkbox asp-for="ViewModel!.IsSystemic" />
       
        <dtat-readonly-checkbox asp-for="ViewModel!.IsDeletable" />
       
        <dtat-readonly-input asp-for="ViewModel!.InsertDateTime" />

       <dtat-readonly-input asp-for="ViewModel!.UpdateDateTime" />
        
        <dtat-readonly-textarea asp-for="ViewModel!.Description" />
    </fieldset>

    <section-form-footer>
		<a asp-page="Index">
			@(Html.DtatGetLinkCaptionForList())
		</a>
		<a asp-page="Update" asp-route-id="@(Model.ViewModel.Id)">
			@(Html.DtatGetLinkCaptionForUpdate())
		</a>
	</section-form-footer>
</section-form>