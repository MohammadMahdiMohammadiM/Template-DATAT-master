@page
@model Server.Pages.Admin.CultureManagement.IndexModel

@{
    var pageTitle =
        $" {Resources.ButtonCaptions.ListOf} {Resources.DataDictionary.Cultures} ";

    ViewData[Constants.ViewDataKeyName.PageTitle] = pageTitle;
}

<section-page-header>
    @(pageTitle)
</section-page-header>

<section-table>
    <table>
        <caption>
            @(pageTitle)
        </caption>

        <thead>
            <tr>
                <th>
                    @(Resources.DataDictionary.RowNumber)
                </th>
                <th>
                </th>
                <th>
                    @(Resources.DataDictionary.Name)
                </th>
                <th>
                    @(Resources.DataDictionary.Flag)
                </th>
                <th>
                    @(Resources.DataDictionary.IsActive)
                </th>
                <th>
                    @(Resources.DataDictionary.IsDefault)
                </th>
                <th>
                    @(Resources.DataDictionary.IsSystemic)
                </th>
                <th>
                    @(Resources.DataDictionary.InsertDateTime)
                </th>
                <th>
                    @(Resources.DataDictionary.UpdateDateTime)
                </th>
            </tr>
        </thead>
        
        <tbody>
            @for (var index = 0; index <= Model.ViewModel.Count - 1; index++)
            {
                var item = Model.ViewModel[index];

                <tr>
                    @(Html.DtatDisplayRowNumberWithTd(value: index + 1))

                    <table-actions>
                        <a asp-page="Details" asp-route-id="@(item.Id)">
                            @(Html.DtatGetIconDetails())
                        </a>
                        <a asp-page="Update" asp-route-id="@(item.Id)">
                            @(Html.DtatGetIconUpdate())
                        </a>
                    </table-actions>

                    <td>
                        @(item.Name)
                    </td>

                    <td>
                        <span class="fi fi-@(item.Flag)"></span>
                    </td>

                    @(Html.DtatDisplayBooleanWithTd(value: item.IsActive))

                    @(Html.DtatDisplayBooleanWithTd(value: item.IsDefault))

                    @(Html.DtatDisplayBooleanWithTd(value: item.IsSystemic))

                    @(Html.DtatDisplayDateTimeWithTd(value: item.InsertDateTime))

                    @(Html.DtatDisplayDateTimeWithTd(value: item.UpdateDateTime))
                </tr>
            }
        </tbody>
    </table>
</section-table>



